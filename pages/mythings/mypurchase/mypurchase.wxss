/* pages/mythings/mypurchase/mypurchase.wxss */
.goodsSupply{
  border: 1px solid #DCDCDC;  
  box-shadow:0px 2px 4px 2px #DDDDDD; /*阴影效果*/
  border-radius: 20rpx;   /*圆角边框*/
  width: 91%;
  height: 360rpx;
  margin-left: 4%;
  margin-top: 3%;
}
/*供应者层*/
.supplierView{
  /*横排，左边头像右边文字*/
  display: flex;  
  flex-direction: row
}
/* 横线 */
.divLine{
 background: #E0E3DA;
 width: 100%;
 margin-top: 2%;
 height: 3rpx;
}
/* 商品层，左侧图片右侧文字描述*/
.goodView{
  display: flex;  
  flex-direction: row
}
/*左侧图片*/
.imgView{
  width: 180rpx;
  height: 220rpx;
  margin-left: 2%;
  margin-top: 2%;
  border-radius: 10rpx;
}
/*右侧文字，文字竖着排列*/
.textView{
  margin-left: 4%;
  margin-top: 2%;
}
/*文字中几成新、位置、价格又需要横排*/
.infoRow{
  display: flex;  
  flex-direction: row
}