/* pages/mythings/mydemand/mydemand.wxss */
/*商品层,上部分为商家，下部分为商品，最下部分为按钮*/
.goodsSupply{
  border: 1px solid #DCDCDC;  
  box-shadow:0px 2px 4px 2px #DDDDDD; /*阴影效果*/
  border-radius: 20rpx;   /*圆角边框*/
  width: 91%;
  height: 330rpx;
  margin-left: 4%;
  margin-top: 3%;
}
/* 横线 */
.divLine{
 background: #E0E3DA;
 width: 100%;
 margin-top: 2%;
 height: 3rpx;
}
/* 商品层，左侧图片右侧文字描述*/
.goodView{
  display: flex;  
  flex-direction: row
}
/*左侧图片*/
.imgView{
  width: 180rpx;
  height: 220rpx;
  margin-left: 2%;
  margin-top: 2%;
  border-radius: 10rpx;
}
/*右侧文字，文字竖着排列*/
.textView{
  margin-left: 4%;
  margin-top: 2%;
}
/*文字中几成新、位置、价格又需要横排*/
.infoRow{
  display: flex;  
  flex-direction: row
}
/*按钮层*/
.buttonView{
  display: flex;  
  flex-direction: row;
  width: 45%;
  margin-left: 53%;
  margin-top: 2%;
}