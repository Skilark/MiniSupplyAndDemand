/* pages/settings/settings.wxss */
.settingView{
  border: 1px solid #DCDCDC;  
  box-shadow:0px 2px 4px 2px #DDDDDD; /*阴影效果*/
  border-radius: 20rpx;   /*圆角边框*/
  width: 70%;
  height: 340rpx;
  margin-top: 30%;
  margin-left: 15%;
  align-items: center;
}
.infoRow{
  display: flex;  
  flex-direction: row  
}
/*分割线*/
.divLine{
 background: #E0E3DA;
 width: 84%;
 margin-left: 8%;
 height: 3rpx;
 margin-top: 3%;
}
.btn-area{
  margin-left: 15%;
  margin-top: 20%;
  width: 70%;
  display: flex;  
  flex-direction: row  
}
.submitBtn{
  background: #D46823;
  color: white;
  margin-left: 20%;
  border-radius: 20rpx;
  height: 40px;
}
.resetBtn{
  background: #D46823;
  color: white;
  margin-left: 6%;
  border-radius: 20rpx;
  height: 40px;
}