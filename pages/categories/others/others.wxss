/* pages/categories/others/others.wxss */
/*商品层*/
.goodsView{
  margin-top: 5%;
}
/*商品层，这里是一个个的商品，在wxml中用wx：for列举（大概）*/
.goodView{
  border: 1px solid #DCDCDC;  
  box-shadow:0px 2px 4px 2px #DDDDDD; /*阴影效果*/
  border-radius: 20rpx;   /*圆角边框*/
  width: 91%;
  height: 250rpx;
  margin-left: 4%;
  /* background: #F5F5F5; */
  /*横排，左边图片右边文字描述*/
  display: flex;  
  flex-direction: row
}
/*左侧图片*/
.imgView{
  width: 180rpx;
  height: 220rpx;
  margin-left: 2%;
  margin-top: 2%;
  border-radius: 10rpx;
}
/*右侧文字，文字竖着排列*/
.textView{
  margin-left: 4%;
  margin-top: 2%;
}
/*文字中几成新、位置、价格又需要横排*/
.infoRow{
  display: flex;  
  flex-direction: row
}