/* pages/release/releasedemand/releasedemand.wxss */
/*整个页面是一个表单*/
.formView{
  margin-top: 3%;
}
/*每行*/
.rowInfo{
  display: flex;  
  flex-direction: row ;
  margin-left: 8%; 
  margin-top: 3%;
}
/*分割线*/
.divLine{
 background: #E0E3DA;
 width: 84%;
 margin-left: 8%;
 height: 3rpx;
 margin-top: 3%;
}
/*上传图片*/
.ui_uploader_cell {
    width: 100%;
    padding: 40rpx;
    box-sizing: border-box;
    margin-left: 3%;
}
.ui_uploader_item{
    float: left;
    position: relative;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    width: 165rpx;
    height: 165rpx;
}
.ui_uploader {
    float: left;
    position: relative;
    margin-right: 25rpx;
    margin-bottom: 25rpx;
    width: 165rpx;
    height: 165rpx;
    border: 2rpx solid #d9d9d9;
    box-sizing: border-box;
}
.ui_uploader:before {
    content: " ";
    position: absolute;
    width: 4rpx;
    height: 79rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #d9d9d9;
}
.ui_uploader:after {
    content: " ";
    position: absolute;
    height: 4rpx;
    width: 79rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #d9d9d9;
}
.ui_uploader_item_icon{
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    background: #fff;
    border-radius: 50%;
}
.ui_uploader_item image {
    width: 100%;
    height: 100%;
}

.btn-area{
  display: flex;  
  flex-direction: row ;
  width: 82%;
  margin-left: 8%;
}
.submitBtn{
  background: #D46823;
  color: white;
  margin-left: 20%;
  border-radius: 20rpx;
  height: 40px;
}
.resetBtn{
  background: #D46823;
  color: white;
  margin-left: 6%;
  border-radius: 20rpx;
  height: 40px;
}